<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>
  <div id="overlay">
        <img src="image/preloader.gif" alt="loader-img" id='loading'>
  </div>
  <div id="particles-js">
    <div>
      <% include ../partials/header %>
    </div>
    <!-- particles.js container -->
      <div class="contactpage">
        <h1>Contactez moi</h1>
        <form action="." method="post" enctype="multipart/form-data" class="form-group">
           <fieldset>
              <label for="name" >Name:</label>
              <input type="text" id="name" name="name" placeholder="Enter your full name" class="form-control" />
              <br />
              <label for="email">Email:</label>
              <input type="email" id="email" name="email" placeholder="Enter your email address" class="form-control" />
              <br />
              <label for="message">Message:</label>
              <textarea id="description" name="message" placeholder="Enter a short message" class="form-control" ></textarea>
              <br />
              <input type="submit" value="send" class="btn btn-primary"/>
           </fieldset>
        </form>
      </div>
  </div>

<!-- scripts -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="//cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
<script src="js/app.js"></script>
<script src="js/jquery.js"></script>


</body>
</html>
